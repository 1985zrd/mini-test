/* pages/flow/flow.wxss */
.wrap {
  display: flex;
  flex-wrap: wrap;
}
.item {
  padding: 1em;
  margin: 0 0 1em 0;
  width: 375rpx;
  border: 1px solid #000;
  box-sizing: border-box;
}
.item:nth-child(2n+1) { order: 1; }
.item:nth-child(2n)   { order: 2; }
.wrap::before,
.wrap::after {
  content: "";
  flex-basis: 100%;
  width: 0;
  order: 2;
}

