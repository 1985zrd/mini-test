<!--miniprogram/pages/map/map.wxml-->
<view>
  <map id="map"
  polyline="{{polyline}}"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="14"
  markers="{{markers}}"
  bindmarkertap="markertap"
  bindregionchange="regionchange"
  show-location
  style="width: 100%; height: 300px;"
  >
  </map>
</view>
<view>
  <button type="primary" bindtap="navigate">导航</button>
  <button type="primary" bindtap="callPho">打电话</button>
</view>
